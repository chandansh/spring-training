package com.training.num;

public class ComplexNumber implements Number {
	private int type;
	private int i, j;

	public int getType() {
		return type;
	}

	public void setType(int type) {
		this.type = type;
	}

	public int getI() {
		return i;
	}

	public void setI(int i) {
		this.i = i;
	}

	public int getJ() {
		return j;
	}

	public void setJ(int j) {
		this.j = j;
	}

	ComplexNumber() {
		this.type = COMPLEX;
	}

	ComplexNumber(int i, int j) {
		this();
		this.i = i;
		this.j = j;
	}

	@Override
	public void display() {
		System.out.println("Rational number Display :: " + p + "/" + q);

	}

	@Override
	public Number add(Number number) {
		ComplexNumber newRational = null;
		if (number instanceof ComplexNumber) {
			ComplexNumber r = (ComplexNumber) number;
			int x = this.p * r.q + this.q * r.p;
			int y = this.q * r.q;
			newRational = new ComplexNumber(x, y);
		} else {
			System.out.println("provided number is not a rational number");
		}

		return newRational;
	}

}
